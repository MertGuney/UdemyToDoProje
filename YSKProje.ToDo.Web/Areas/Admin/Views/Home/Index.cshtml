
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-3">
    <div class="col-md-6">
        <div class="card text-white text-center bg-primary mb-3">
            <div class="card-body">
                <h4 class="card-title">Atanmayı Bekleyen Görev Sayısı</h4>
                @if (ViewBag.AtanmayiBekleyenGorevSayisi > 0)
                {
                    <p class="card-text">@ViewBag.AtanmayiBekleyenGorevSayisi</p>
                    <p class="text-right">İncelemek için <a asp-action="Index" asp-controller="IsEmri" class="text-light">Tıklayınız <i class="fas fa-chevron-circle-right"></i></a></p>
                }
                else
                {
                    <p class="card-text lead">Atanmayan Görev Bulunmamaktadır.</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white text-center bg-primary mb-3">
            <div class="card-body">
                <h4 class="card-title">Tamamlanmış Görev Sayısı</h4>
                @if (ViewBag.TamamlanmisGorevSayisi > 0)
                {
                    <p class="card-text">@ViewBag.TamamlanmisGorevSayisi</p>
                }
                else
                {
                    <p class="card-text lead">Herhangi Bir Tamamlanan Görev Bulunmamakta.</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white text-center bg-primary mb-3">
            <div class="card-body">
                <h4 class="card-title">Okunmamış Bildirim Sayısı</h4>
                @if (ViewBag.OkunmamisBildirimSayisi > 0)
                {
                    <p class="card-text">@ViewBag.OkunmamisBildirimSayisi</p>
                    <p class="text-right">İncelemek için <a asp-action="Index" asp-controller="Bildirim" class="text-light">Tıklayınız <i class="fas fa-chevron-circle-right"></i></a></p>
                }
                else
                {
                    <p class="card-text lead">Herhangi Bir Okunmamış Bildirim Bulunmamaktadır.</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
            <div class="card text-white text-center bg-primary mb-3">
                <div class="card-body">
                    <h4 class="card-title">Yazılmış Rapor Sayısı</h4>
                    @if (ViewBag.ToplamRaporSayisi > 0)
                    {
                        <p class="card-text">@ViewBag.ToplamRaporSayisi</p>
                    }
                    else
                    {
                        <p class="card-text lead">Herhangi Bir Rapor Yazılmamış.</p>
                    }
                </div>
            </div>
        </div>
</div>


