@model GorevListAllDto
@{
    ViewData["Title"] = "Detaylandır";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Raporlar.Count > 0)
{
    <a asp-action="GetirExcel" asp-route-id="@Model.Id" target="_blank" class="btn btn-outline-light mt-2"><i class="fas fa-file-excel mr-2"></i> Excel</a>
    <a asp-action="GetirPdf" asp-route-id="@Model.Id" class="btn btn-outline-light mt-2"><i class="fas fa-file-pdf mr-2"></i> Pdf</a>
    <table class="table table-hover table-sm text-center table-bordered">
        <tr>
            <th colspan="2">@Model.AppUser.Name @Model.AppUser.Surname Personelinizin @Model.Ad görevine yazmış olduğu raporlar</th>
        </tr>
        <tr>
            <th>Tanim</th>
            <th>Detay</th>
        </tr>
        @foreach (var rapor in Model.Raporlar)
        {
            <tr>
                <td>@rapor.Tanim</td>
                <td>@rapor.Detay</td>
            </tr>
        }
    </table>
}
else
{
    <div class="border border-dark mt-2 text-center">@Model.AppUser.Name @Model.AppUser.Surname Personeliniz şuan da @Model.Ad görevi üzerinde çalışıyor henüz bir rapor yazmamış.</div>
}

