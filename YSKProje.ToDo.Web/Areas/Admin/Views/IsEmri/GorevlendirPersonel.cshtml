@model PersonelGorevlendirListDto
@{
    ViewData["Title"] = "GorevlendirPersonel";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-4 mt-4">
        <div class="card">
            <div class="card-header"><h4 class="text-center lead pt-2">Görev Bilgileri</h4></div>
            <div class="card-body">
                <h5 class="card-title">@Model.Gorev.Ad</h5>
                <p class="card-text">@Model.Gorev.Aciklama</p>
                <p class="card-text"><strong>Aciliyet Durumu:</strong> <span class="badge badge-primary">@Model.Gorev.Aciliyet.Tanim</span> </p>
            </div>
        </div>
    </div>
    <div class="col-md-8 mt-4">
        <div class="card mb-3">
            <div class="card-header"><h5 class="card-title">Personel Bilgileri</h5></div>
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="~/img/@Model.AppUser.Picture" class="card-img w-100 img-fluid" alt="@Model.AppUser.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@Model.AppUser.Name @Model.AppUser.SurName</h5>
                        <p class="card-text"><getirGorevAppUserId app-user-id="@Model.AppUser.Id"></getirGorevAppUserId></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 mt-3">
        <form asp-action="AtaPersonel" method="post">
            <p class="lead">Yukarıdaki Göreve İlgili Personel Atanacaktır. Bu işlemi gerçekleştirmek istediğinize emin misiniz ?</p>
            <div class="form-group text-center">
                <a asp-action="AtaPersonel" asp-route-id="@Model.Gorev.Id" class="btn btn-info"><i class="fas fa-times-circle mr-2"></i>Vazgeç</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-check mr-2"></i> Görevlendir</button>
                <input type="hidden" name="PersonelId" value="@Model.AppUser.Id" />
                <input type="hidden" name="GorevId" value="@Model.Gorev.Id" />
            </div>
        </form>
    </div>
</div>
