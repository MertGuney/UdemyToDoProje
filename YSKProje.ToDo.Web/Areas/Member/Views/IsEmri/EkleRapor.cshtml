@model RaporAddDto
@{
    ViewData["Title"] = "EkleRapor";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<form asp-action="EkleRapor" class="w-75 mx-auto p-3" method="post">
    <div class="text-left lead p-3">
        <h4 class="text-center">Bu göreve rapor yazmaktasınız.</h4>
        <p>
            <span class="text-danger">Görevin Adı :</span> @Model.Gorev.Ad
        </p>
        <p>
            <span class="text-danger">Görevin Açıklaması :</span> @Model.Gorev.Aciklama
        </p>
        <p>
            <span class="text-danger">Görevin Aciliyet Durumu :</span> @Model.Gorev.Aciliyet.Tanim
        </p>
    </div>
    <input type="hidden" asp-for="GorevId" />
    <div class="form-group">
        <label>Tanım :</label>
        <span asp-validation-for="Tanim" class="text-danger"></span>
        <input asp-for="Tanim" class="form-control" />
    </div>
    <div class="form-group">
        <label>Detay :</label>
        <span asp-validation-for="Detay" class="text-danger"></span>
        <textarea asp-for="Detay" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <a asp-action="Index" class="btn btn-warning btn-sm"><i class="fas fa-chevron-circle-left mr-2"></i>Vazgeç</a>
        <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2"></i>Kaydet</button>
    </div>
</form>

@section JavaScript{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}
