@model AppUserSignInDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

<form asp-action="GirisYap" method="post" class="w-75 mx-auto p-4 mt-5 shadow ">
    <div class="form-group">
        <label>Kullanıcı Adı :</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şifre :</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input"/>
        <label class="form-check-label" asp-for="RememberMe"></label>
    </div>
    <a asp-action="KayitOl" class="btn btn-warning btn-sm">Kayıt Ol</a>
    <input type="submit" class="btn btn-info btn-sm" value="Giriş Yap" />
</form>