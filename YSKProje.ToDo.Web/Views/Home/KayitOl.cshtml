@model AppUserAddDto
@{
    ViewData["Title"] = "KayitOl";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}
<form asp-action="KayitOl" method="post" class="w-50 mt-3 mx-auto p-3 shadow">
    <h4 class="text-center">Kayıt Ol</h4>
    <div class="form-group">
        <label>Adınız :</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Soyadınız :</label>
        <span asp-validation-for="SurName" class="text-danger"></span>
        <input asp-for="SurName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email :</label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input type="email" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şifre :</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şifre Doğrulama :</label>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <input type="password" asp-for="ConfirmPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kullanıcı Adı :</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" class="btn btn-info btn-sm ">Kayıt Ol</button>
    <a asp-action="Index" class="btn btn-warning btn-sm">Vazgeç</a>
</form>

